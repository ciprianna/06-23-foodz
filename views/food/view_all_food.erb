      <% if food.category_id == 3 %>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <h3>Vegetables</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 6 %>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <h3>Fats/Oils</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 2 %>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
  </ul>
  <p>
    <a href="/add_food">Add new food</a>
  </p>
</body>
