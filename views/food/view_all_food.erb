<!-- View all food items -->
<body>
  <h2>View All Food</h2>
  <ul>
    <h3>Grains</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 4 %>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <h3>Proteins</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 5 %>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <h3>Dairy</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 1 %>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
