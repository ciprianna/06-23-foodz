<!-- View all food items -->
<head>
  <h1><center>
    View All Food
  </center></h1>
</head>
<body>
  <ul>
    <% Food.all.each do |food| %>
      <% if food.category == 4 %>
        <h3>Grains</h3>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <% Food.all.each do |food| %>
      <% if food.category == 5 %>
        <h3>Proteins</h3>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <% Food.all.each do |food| %>
      <% if food.category == 1 %>
        <h3>Dairy</h3>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <% Food.all.each do |food| %>
      <% if food.category == 3 %>
        <h3>Fruits</h3>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <% Food.all.each do |food| %>
      <% if food.category == 6 %>
        <h3>Vegetables</h3>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
    <% Food.all.each do |food| %>
      <% if food.category == 1 %>
        <h3>Fats/Oils</h3>
        <li><b><%= food.id %></b> - <i><%= food.name %></i></li>
      <% end %>
    <% end %>
  </ul>
  <p>
    <a href="/add_food">Add new food</a>
  </p>
</body>
<footer>
  <center>
    <button><a href="/home">Home</a></button>
  </center>
</footer>
