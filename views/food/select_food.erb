<!-- Select available food items -->
<head>
  <h1><center>
    Select Available Food Items
  </center></h1>
</head>
<body>
  <!-- TODO - Need to make "/get_recipes" views and route handlers -->
  <form action="/get_recipes">
    <h3>Grains</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 4 %>
        <label><input type="checkbox" name="foods[food_id]" value="<%= food.id %>"><%= food.name %></label>
      <% end %>
    <% end %>
    <h3>Proteins</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 5 %>
        <label><input type="checkbox" name="foods[food_id]" value="<%= food.id %>"><%= food.name %></label>
      <% end %>
    <% end %>
    <h3>Dairy</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 1 %>
        <label><input type="checkbox" name="foods[food_id]" value="<%= food.id %>"><%= food.name %></label>
      <% end %>
    <% end %>
    <h3>Fruits</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 3 %>
        <label><input type="checkbox" name="foods[food_id]" value="<%= food.id %>"><%= food.name %></label>
      <% end %>
    <% end %>
    <h3>Vegetables</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 6 %>
        <label><input type="checkbox" name="foods[food_id]" value="<%= food.id %>"><%= food.name %></label>
      <% end %>
    <% end %>
    <h3>Fats/Oils</h3>
    <% Food.all.each do |food| %>
      <% if food.category_id == 2%>
        <label><input type="checkbox" name="foods[food_id]" value="<%= food.name %>"><%= food.name %><label>
      <% end %>
    <% end %>
    <p>
      <input type="submit">
    </p>
  </form>
</body>
<footer>
  <center>
    <button><a href="/home">Home</a></button>
  </center>
</footer>
