<!-- Error Message to display if the new food cannot be added -->
<% if @error %>
  <h3>Cannot add food: Missing information</h3>
<% end %>

<!-- Add new food item -->
<head>
  <h1><center>
    Add a New Food
  </center></h1>
</head>
<body>
  <h2>Enter the following information to add food to the database:</h2>
  <form action="/save_new_food">
    <p>
      Name of the new food item:
    </p>
    <input type="text" name="name" placeholder="Name of Food" value="<%= params["name"] %>">
    <p>
      Food category of the new item:
    <select name="category">
      <% Category.all.each do |category| %>
        <% if params["category"].to_i == category.id %>
          <option value="<%= category.id %>" selected><%= category.name %></option>
        <% else %>
          <option value="<%= category.id %>"><%= category.name %></option>
        <% end %>
      <% end %>
    </select>
    </p>
    <p>
      <input type="submit">
    </p>
  </form>
</body>
<footer>
  <center>
    <button><a href="/home">Home</a></button>
  </center>
</footer>
