<!-- View Recipes by Type -->
<head>
  <h1><center>
    Recipes
  </center></h1>
</head>
<body>
  <ul>
    <% Recipe.all.each do |recipe| %>
      <%= if recipe.recipe_type == 1 %>
        <h3>American</h3>
        <li>
          <b><%= recipe.id %></b> - <i><%= recipe.name %></i>, <b>Time to Make</b>: <%= recipe.time_to_make %>
        </li>
    <% end %>
  </ul>
  <p>
    <a href="/all_recipes">Return to All Recipes</a>
  </p>
</body>
<footer>
  <center>
    <button><a href="/home">Home</a></button>
  </center>
</footer>
