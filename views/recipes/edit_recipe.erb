<!-- View all recipes -->
<body>
  <nav>
    <button><a href="/all_recipes">Return to View All Recipes</a></button>
  </nav>
  <h2>Choose a Recipe to Edit</h2>
  <ul>
    <% Recipe.all.each do |recipe| %>
      <li>
        <a href="/edit_recipe/<%= recipe.id %>"><i><%= recipe.name %></i></a>, <%= recipe.recipe_type_id %>, <b>Time to Make</b>: <%= recipe.time_to_make %>
      </li>
    <% end %>
  </ul>
</body>
