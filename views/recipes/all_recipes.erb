<!-- View all recipes -->
<head>
  <h1><center>
    Recipes
  </center></h1>
</head>
<body>
  <ul>
    <% Recipe.all.each do |recipe| %>
      <li>
        <b><%= recipe.id %></b> - <i><%= recipe.name %></i>, <%= recipe.recipe_type %>, <b>Time to Make</b>: <%= recipe.time_to_make %>
      </li>
    <% end %>
  </ul>
  <p>
    <a href="/recipes_by_type">View recipes by type</a>
  </p>
  <p>
    <a href="/recipes_by_time">View recipes by time to make</a>
  </p>
  <p>
    <a href="/add_recipe">Add new recipe</a>
  </p>
</body>
<footer>
  <center>
    <button><a href="/home">Home</a></button>
  </center>
</footer>
