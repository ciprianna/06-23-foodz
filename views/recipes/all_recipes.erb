<!-- View all recipes -->
<body>
  <nav>
    <button><a href="/recipes_by_type">View recipes by type</a></button>
    <button><a href="/recipes_by_time">View recipes by time to make</a></button>
    <button><a href="/add_recipe">Add new recipe</a></button>
    <button><a href="/edit_recipe">Edit a recipe</a></button>
  </nav>
  <h2>Recipes</h2>
  <ul>
    <% Recipe.all.each do |recipe| %>
      <li>
        <a href="/all_recipes/<%= recipe.id %>"><i><%= recipe.name %></i></a>, <%= recipe.recipe_type_id %>, <b>Time to Make</b>: <%= recipe.time_to_make %>
      </li>
    <% end %>
  </ul>
</body>
