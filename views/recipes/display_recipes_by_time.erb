<!-- View Recipes by Time -->
<body>
  <nav>
    <button><a href="/all_recipes">Return to All Recipes</a></button>
  </nav>
  <h2>
    Recipes that are <% if params["recipes"]["time"] == "hour" %>
    around an <%= params["recipes"]["time"] %>
    <% else %>
    <%= params["recipes"]["time"] %>
    <% end %>
  </h2>
  <ul>
    <% @recipes_to_show.each do |recipe| %>
    <li>
      <a href="/all_recipes/<%= recipe.id %>"><b><%= recipe.id %></b> - <i><%= recipe.name %></i></a>, <b>Time to Make</b>: <%= recipe.time_to_make %>
    </li>
    <% end %>
  </ul>
</body>
